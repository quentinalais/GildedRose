<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="60.0" prefHeight="527.0" prefWidth="473.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.insightr.gildedrose.Controller">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
    <Label style="-fx-font: NORMAL 20 Arial;" text="Items" GridPane.columnIndex="0" GridPane.rowIndex="0">
    </Label>
    <TableView fx:id="tableView" prefHeight="500" prefWidth="600" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <columns>
            <TableColumn fx:id="name" prefWidth="215.0" text="Name">
            </TableColumn>
            <TableColumn fx:id="sellIn" prefWidth="134.0" text="Sell In">
            </TableColumn>
            <TableColumn fx:id="quality" minWidth="0.0" prefWidth="54.0" text="Quality">
            </TableColumn>
        </columns>
    </TableView>
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="0">

    </HBox>
    <HBox alignment="bottom_right" prefHeight="27.0" prefWidth="506.0" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <TextField fx:id="firstNameField" prefWidth="90" promptText="First Name" />
        <TextField fx:id="lastNameField" prefWidth="90" promptText="Last Name" />
        <TextField fx:id="emailField" prefWidth="150" promptText="email" />
        <Button onAction="#add" text="Add" />
        <Button onAction="#update" text="Update" />

    </HBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
